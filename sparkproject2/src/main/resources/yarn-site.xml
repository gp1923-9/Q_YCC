<configuration>

<!-- Site specific YARN configuration properties -->
<!-- yarn的resource manager的主机名 -->
    <property>
    <name>yarn.resourcemanager.hostname</name>
    <value>hadoop0001</value>
    </property>
    
    <!-- nodemanager的服务方式 -->
    <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
    </property>
    
    <!-- resourcemanager的内部通信端口 -->
    <property>
    <name>yarn.resourcemanager.address</name>
    <value>hadoop0001:8032</value>
    </property>
    
    <!-- resourcemanager的调度程序端口 -->
    <property>
	<name>yarn.resourcemanager.scheduler.address</name>
    <value>hadoop0001:8030</value>
    </property>
    
    <!-- resourcemanager的web ui的监控端口 -->
    <property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value>hadoop0001:8031</value>
    </property>
    
    <!-- resourcemanager的管理员端口 -->
    <property>
 	<name>yarn.resourcemanager.admin.address</name>
    <value>hadoop0001:8033</value>
    </property>
    
    <!-- resourcemanager的web ui的端口 -->
    <property>
 	<name>yarn.resourcemanager.webapp.address</name>
    <value>hadoop0001:8088</value>
    </property>
</configuration>
